<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/notification_iv_album"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/placeholder_disk_play_song" />

    <ImageView
        android:layout_marginRight="10dp"
        android:id="@+id/notification_iv_cancel"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:src="@drawable/note_btn_close_white" />

    <ImageView
        android:id="@+id/notification_iv_next"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/notification_iv_cancel"
        android:padding="10dp"
        android:src="@drawable/note_btn_next_white" />


    <ImageView
        android:id="@+id/notification_iv_play"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/notification_iv_next"
        android:padding="5dp"
        android:src="@drawable/note_btn_play_white" />

    <ImageView
        android:id="@+id/notification_iv_prev"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/notification_iv_play"
        android:padding="10dp"
        android:src="@drawable/note_btn_pre_white" />


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/notification_iv_album"
        android:layout_toLeftOf="@id/notification_iv_prev"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notification_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="hello"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/notification_tv_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:lines="1"
            android:text="hello"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>